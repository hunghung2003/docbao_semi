    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noidungbinhluan</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for binhluan in binhluans %}
